<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SelectRoleActivity">


    <TextView
        android:id="@+id/eye_keep"
        android:layout_width="235.2dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:text="@string/eye_keep"
        android:fontFamily="@font/modak"
        android:textColor="@color/blue"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textAppearance="@style/eyekeep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="아이 : 킵"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/eye_keep"
        app:layout_constraintTop_toBottomOf="@+id/eye_keep" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:gravity="right"
        android:text="내아이를 안전하게"
        app:layout_constraintEnd_toEndOf="@+id/eye_keep"
        app:layout_constraintTop_toBottomOf="@+id/eye_keep" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eye_keep">


        <RadioGroup
            android:id="@+id/roleRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/childRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_select_role_eye"
                android:button="@drawable/image_check1"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/parentRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_select_role_parents"
                android:button="@drawable/image_check1"
                android:gravity="center"
                android:textSize="16sp" />
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_loginn"
            android:text="계속하기"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>